@model BookDisplayModel
@{

}

<div my-2>
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
 

  <div class="col-12">
            <label class="visually-hidden" for="genreId">Thể loại</label>
            <select class="form-select" id="genreId" name="genreId">
      <option selected>Choose...</option>
      @foreach(var genre in Model.Genres)
      {
                    <option selected="@(genre.Id == Model.GenreId)" value="@genre.Id">@genre.GenreName</option>

      }
   
    </select>
  </div>

  <div class="col-12">
            <label class="visually-hidden" value="@Model.STerm" for="sterm">tìm kiếm theo tiêu đề</label>
    <div class="input-group">
        <div class="input-group-text"></div>
                <input type="text" class="form-control" id="sterm" name="sterm" placeholder="tìm kiếm theo tiêu đề" />
    </div>
     
    
  </div>

  <div class="col-12">
            <button type="submit" class="btn btn-primary">Bộ lọc </button>
            <button href="/Home/Index" class="btn btn-primary">đặt lại </button>

  </div>
</form>
</div>
<div class="w-100 mt-4 d-flex flex-wrap ">
    @foreach (var book in Model.Books)
    {
        <div class="card mx-2 mb-4" style="width: 16rem;">
            @if (string.IsNullOrEmpty(book.Image))
            {
                <img style="width:100%;height:300px" src="/image/notimage.jpg" class="card-img-top" alt="...">

            }else
            {
                <img style="width:100%;height:300px" src="/image/@book.Image" class="card-img-top" alt="...">

            }
            <div class="card-body">
                <h5 class="card-title">@book.BookName</h5>
                <p class="card-text">
                    <b>Genre: </b>@book.GenreName <br />
                    <b>Author: </b>@book.AuthorName <br />
                    <b>Price: </b>@book.Price
                </p>
                <button type="button" onclick="add(@book.Id)" class="btn btn-primary">thêm vào giỏ hàng</button>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script>
        async function add(bookId) {
            var usernameEl = document.getElementById("username");
            if (usernameEl == null) {
                window.location.href = "/Identity/Account/Login";
                //var username=usernameEl.innerText;
                //  if(username.length<1){
                //      window.location.href="/Identity/Account/Login";
                //  }
            }
            try {
                var response = await fetch(`/Cart/AddItem?bookId=${bookId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}